doctype
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        title= 'Snowdown User Leaderboard'
        meta(name='description' content='A list of all users and their respective scores in Snowdown matches played.')
        meta(name='author' content='Null_Cat')
        
        link(rel='stylesheet' href='//fonts.googleapis.com/css?family=Pacifico' type='text/css')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
        link(rel='stylesheet' href='/css/index.css' type='text/css')
    body
        div(class='page-header')
            h1= 'Snowdown User Leaderboard'
            p= 'A list of all users and their respective scores in Snowdown matches played.'
        div(class='table-responsive', style='overflow-x:auto; width:99%; margin:auto;')
            table(class='table')
                thead
                    tr
                        th= 'Pos'
                        th= 'User'
                        th= 'Score'
                        th= 'Headshots'
                        th= 'Set At'
                        th= 'Match ID'
                tbody
                    each userScores, index in leaderboardData
                        tr
                            td= index + 1
                            td= userScores.Username
                            td= userScores.Score
                            td= userScores.Headshots
                            td= new Date(userScores.ScoreSetAt).toLocaleDateString()
                            td= userScores.MatchID
        script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')
